{
	"private": true,
	"name": "hackercat",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"prebuild:js": "esbuild src/index.js --target=es2020 --platform=browser --bundle --outfile=bin/index.js",
		"prebuild": "npm run prebuild:js",
		"build": "js-compute-runtime bin/index.js bin/main.wasm",
		"start": "fastly compute serve",
		"lint": "eslint .",
		"commit": "git add . && git commit -m '🐱‍💻' && git push",
		"test": "start-test start http://127.0.0.1:7676 test:integration",
		"test:integration": "mocha test/**/*.test.js --recursive --timeout 30000 --exit"
	},
	"devDependencies": {
		"@fastly/js-compute": "0.5.13",
		"@worker-tools/html": "^2.0.0-pre.13",
		"@worker-tools/response-creators": "^1.0.8",
		"esbuild": "^0.15.16",
		"eslint": "^8.29.0",
		"hono": "^2.5.8",
		"mocha": "^10.1.0",
		"start-server-and-test": "^1.15.0"
	},
	"volta": {
		"node": "18.10.0"
	}
}
